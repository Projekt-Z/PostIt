@using PostIt.Web.Enums
@using PostIt.Web.Helpers
@model List<Notification>?

@{
    ViewBag.Title = "Notifications";
    Layout = "_Layout";
}

<div>
    
    @if (Model is null)
    {
        <p>No notifications...</p>
        return;
    }
    
    @foreach (var notification in Model)
    {
        <article class="bg-secondary m-2 p-3">
            @{
                
                switch (notification.Type)
                {
                    case ENotificationType.Post:
                        <a>✉</a>
                        break;
                    case ENotificationType.Like:
                        <a>❤</a>
                        break;
                    case ENotificationType.Follow:
                        <a>👤</a>
                        break;
                    case ENotificationType.Response:
                        <a>🤳</a>
                        break;
                }
            }
            <h5>@notification.Title</h5>
            <p>@notification.Content</p>
            
            <a>@notification.Time.TimeAgo()</a>
            
        </article>
    }
</div>